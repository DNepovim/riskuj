.table
	width 90vw
	margin 50px 5vw

	&-item
		cursor pointer
		color $c-main
		font-size 2rem
		font-weight 700
		text-align center
		border-radius $radius
		background alpha($c-main, 0.1)
		padding 0.5em
		transition color 300ms, background 300ms

		&:first-of-type
			text-align left
			font-weight 500
			background $c-main
			color $c-blank

		&.disable
			color alpha($c-main, 0.2)

	&-question
		cursor pointer
		display none
		position absolute
		top 40px
		left 10vw
		z-index 10
		width 80vw
		height 500px
		border-radius $radius
		color $c-blank
		font-weight 300
		background $c-main
		justify-content center
		align-items center

		&.show
			display flex



