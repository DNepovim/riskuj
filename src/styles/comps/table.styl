.table
	width 100%

	&-item
		cursor pointer
		color $c-main
		font-size 2rem
		font-weight 700
		text-align center
		border-radius $radius
		background alpha($c-main, 0.1)
		padding 0.5em
		transition color 300ms, background 300ms

		&:first-of-type
			text-align left
			font-weight 500
			background $c-main
			color $c-blank

			.value
				display none

			&.disable
				background $c-gray

		&.disable
			color alpha($c-main, 0.2)

	&-question
		position relative
		display none
		position absolute
		top 40px
		left 10vw
		z-index 10
		width 80vw
		height 500px
		border-radius $radius
		color $c-blank
		font-weight 300
		background $c-main
		justify-content center
		align-items center

		&-text
			font-size 1.2rem

		&-buttons
			position absolute
			display flex
			bottom 0
			left 0
			width 100%

			.button
				cursor pointer
				flex 1
				height 30px

				&.one
					background $c-blue

				&.two
					background $c-yellow

				&.three
					background $c-green

		&.show
			display flex



